<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/movieCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/oneFiftyDp"
    android:layout_height="@dimen/twoHundredDp"
    android:layout_margin="@dimen/fiveDp"
    app:cardCornerRadius="@dimen/tenDp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivCardbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/fiveDp"
            android:src="@color/purple"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"/>
        <TextView
            android:id="@+id/idTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/movie_title"
            android:fontFamily="@font/robotocondensedregular"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="?colorOnPrimary"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/tenDp"
            android:layout_marginVertical="@dimen/fiveDp"
            android:textAllCaps="true"
            android:layout_weight="0.2"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>